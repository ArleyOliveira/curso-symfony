{% extends 'IFNMGBaseBundle:Layout:layout.html.twig' %}
{% set page_title = 'Home' %}


{% block body %}
    <br>
    <br>
    <br>
    <br>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Produtos <a href="{{ path('product_new') }}" class="btn btn-success btn-xs pull-right">Novo</a></h3>
        </div>
        <div class="panel-body">
            <table class="table">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Preço</th>
                    <th>Descrição</th>
                </tr>
                </thead>
                <tbody>
                {% for product in products %}
                    <tr>
                        <td>{{ product.id }}</td>
                        <td>{{ product.name }}</td>
                        <td>R${{ product.price | number_format(2, ',', '.') }}</td>
                        <td>{{ product.description }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}

{% endblock %}